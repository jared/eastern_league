<% title("Announcements") %>

<article class="module width_full">
  <header><h3>Edit an Announcement</h3></header>
  <%= form_for @announcement do |f| %>
    <div class="module_content">
      <%= render "shared/error_messages", :target => @announcement %>
      <%= render :partial => "announcement_form", :locals => { :f => f } %>

    </div>
    <footer>
      <div class="submit_link">
        <%= f.submit "Save", :class => "alt_btn" %>
        or <%= link_to "Cancel", request.referer %>
      </div>
    </footer>
  <% end %>
</article>